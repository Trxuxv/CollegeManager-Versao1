<div class="container mt-20 bg-gray-50 shadow-2xl" id="cont-1" ng-app="students" ng-controller="studentCtrl">
    <div class="panel bg-white">
        <div class="panel-heading bg-gray-100 text-gray-700 font-medium border-0">Students</div>
        <div class="panel-body bg-white">
            <button  class="bg-green-700 rounded-full text-white p-2" type="button" shadow-none data-target="#AddStudent" data-toggle="modal">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
            <input class="bg-gray-300 p-2" id="cont-6" shadow-none ng-model="search" placeholder="Search for a student..." type="text" />
        </div>

        @*LIST*@
        <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
            <table class="w-full text-xl text-left text-gray-500">
                <thead class="text-xl font-black text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="py-3 px-6">
                            ID
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Name
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Birthday
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Registration Number
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Course
                        </th>
                        <th scope="col" class="py-3 px-6 text-center">
                            ACTIONS
                        </th>
                    </tr>
                </thead>
                <tbody class="border-yellow-500">
                    <tr ng-repeat="t in Students | filter:search" class="bg-white border-0 hover:bg-gray-50 ">
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            {{t.StudentId}}
                        </td>
                        <td class="py-4 px-6 border-gray-100">
                            {{t.Name}}
                        </td>
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            {{t.Birthday | date }}
                        </td>
                        <td class="py-4 px-6 border-gray-100">
                            {{t.RgNumber}}
                        </td>
                        <td class="py-4 px-6 border-gray-100">
                            {{t.CourseName}}
                        </td>
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            <div class="flex items-center justify-center">
                                <svg data-target="#UpdateStudent" data-toggle="modal" ng-click="updateStudentById(t)" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 bg-yellow-600 rounded-full text-white p-2  hover:bg-yellow-900">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                                </svg>
                                <svg data-target="#DeleteStudent" id="btnDelete" data-toggle="modal" ng-click="deleteStudentById(t)" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 ml-2 bg-red-600 rounded-full text-white p-2  hover:bg-red-900">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                </svg>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        @*ADD STUDENT*@
        <div class="modal" id="AddStudent" role="dialog" style="width: 100%; padding-top: 12rem;">
            <div class="modal-dialog" style="width: 40%; margin-top: 4%;">
                <div class="modal-content" style="background: #0d1117;">
                    <div class="modal-header" style="border: none;">
                        <h3 style="color: #C9D1D9;">New Student</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="AddNewStudentForm">
                            <div class="form-group" style="width: 100%;">
                                <input class="form-control" readonly="readonly" name="studentId" type="hidden" placeholder="Student Id" style="margin: auto; min-width: 300px;" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="nome" ng-model="name" placeholder="Name" style="width:100%;" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="date" name="nome" ng-model="birthday" placeholder="Birthday" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="nome" ng-model="rgnumber" placeholder="Registration Number" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="nome" ng-model="courseid" placeholder="CourseID" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer" style="border: none;">
                        <button type="button" class="btn btn-primary" shadow-none id="btnSave" data-dismiss="modal" ng-click="addStudent()">Confirm</button>
                        <button type="button" class="btn btn-default" id="btnSave" data-dismiss="modal" ng-click="clearData()">Close</button>
                    </div>
                </div>
            </div>
        </div>

        @*UPDATE STUDENT*@
        <div class="modal" id="UpdateStudent" role="dialog" style="width: 100%; margin-top: 12rem;">
            <div class="modal-dialog" style="width: 40%; margin-top: 4%;">
                <div class="modal-content">
                    <div class="modal-header" style="border: none;">
                        <h3 class="text-gray-600">Update Student</h3>
                    </div>
                    <div class="modal-body" style="margin-left: 20px">
                        <form class="form-horizontal" name="UpdateForm">
                            <div class="form-group">
                                <input class="form-control" readonly="readonly" name="StudentId" ng-model="UpdatedStudentId" type="hidden" placeholder="TeacherId" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Name" ng-model="UpdatedName" type="text" placeholder="Name" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Birthday" ng-model="UpdatedBirthday" type="date" placeholder="Birthday" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Salary" ng-model="UpdatedRgNumber" type="text" placeholder="Registration Number" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Salary" ng-model="UpdatedCourseId" type="text" placeholder="CourseID" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer" style="border: none;">
                        <button type="button" id="btnSave" class="btn btn-primary bg-yellow-600 hover:bg-yellow-900" data-dismiss="modal" ng-click="updateStudent()">
                            Update
                        </button>
                        <button type="button" id="btnSave" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        @*DELETE STUDENT*@
        <div class="modal" role="dialog" id="DeleteStudent" style="padding-top: 13em; ">
            <div class="modal-dialog bg-gray-50">
                <div class="modal-content text-gray-500">
                    <div class="modal-header">
                        <h4 class="text-info text-center text-gray-700">Are you sure you want to delete this student?</h4>
                    </div>
                    <div class="modal-body">
                        <div class="text-gray-700 w-2/5 mx-auto my-2">
                            <p>Student's name: {{UpdatedName}}</p>
                        </div>
                    </div>
                    <div class="modal-footer" style="border: none;">
                        <button type="button" id="btnSave" class="btn btn-danger bg-red-600" data-dismiss="modal" ng-click="deleteStudent(UpdatedStudentId)">Delete</button>
                        <button type="button" id="btnSave" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/AngularJsApp/Student/Module.js"></script>
    <script src="~/AngularJsApp/Student/Service.js"></script>
    <script src="~/AngularJsApp/Student/Controller.js"></script>

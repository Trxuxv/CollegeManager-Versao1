
@{
    ViewBag.Title = "Index";
}

<div class="w-full h-full mt-20 shadow-2xl rounded-lg flex-col overflow-hidden" ng-app="dashboard" ng-controller="dashboardCtrl">
    <div class="w-full h-2/5 bg-yellow-500 flex items-center justify-center">
        <div class="w-1/5 h-4/6 bg-white shadow-2xl rounded-lg mr-10 flex-col">
            <div class="h-1/4 flex items-center justify-left ml-10 font-bold text-gray-600">
                STUDENTS
            </div>
            <div class="flex w-full items-center justify-center h-2/4">
                <div class="w-1/3 text-5xl font-black">
                    {{Students}}
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 rounded-full text-white p-2 bg-yellow-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="w-1/5 h-4/6 bg-white shadow-2xl rounded-lg mr-10 flex-col">
            <div class="h-1/4 flex items-center justify-left ml-10 font-bold text-gray-600">
                GRADE'S 'AVERAGE
            </div>
            <div class="flex w-full items-center justify-center h-2/4">
                <div class="w-1/3 text-5xl font-black">
                    {{GradeAVG}}
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 rounded-full text-white p-2 bg-cyan-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.745 3A23.933 23.933 0 003 12c0 3.183.62 6.22 1.745 9M19.5 3c.967 2.78 1.5 5.817 1.5 9s-.533 6.22-1.5 9M8.25 8.885l1.444-.89a.75.75 0 011.105.402l2.402 7.206a.75.75 0 001.104.401l1.445-.889m-8.25.75l.213.09a1.687 1.687 0 002.062-.617l4.45-6.676a1.688 1.688 0 012.062-.618l.213.09" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="w-1/5 h-4/6 bg-white shadow-2xl rounded-lg mr-10 flex-col">
            <div class="h-1/4 flex items-center justify-left ml-10 font-bold text-gray-600">
                TEACHERS
            </div>
            <div class="flex w-full items-center justify-center h-2/4">
                <div class="w-1/3 text-5xl font-black">
                    {{Teachers}}
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 rounded-full text-white p-2 bg-red-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="w-1/5 h-4/6 bg-white shadow-2xl rounded-lg mr-10 flex-col">
            <div class="h-1/4 flex items-center justify-left ml-10 font-bold text-gray-600">
                COURSES
            </div>
            <div class="flex w-full items-center justify-center h-2/4">
                <div class="w-1/3 text-5xl font-black">
                    {{Courses}}
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 rounded-full text-white p-2 bg-teal-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 9.75L16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" />
                    </svg>

                </div>
            </div>
        </div>
    </div>
    <div class="w-full h-2/3 bg-gradient-to-r from-yellow-500 via-yellow-400 to-slate-400">
        <div class="w-5/6 h-5/6 bg-white mx-auto border border-gray-200 rounded-lg shadow-2xl flex-col items-center justify-center">
            <div class="h-14 p-3 text-base font-bold text-gray-200 text-uppercase flex"><p class="p-1 bg-yellow-700 rounded-full w-32 text-center">students</p> <p class="ml-2 p-1 bg-red-700 rounded-full w-32 text-center">teachers</p></div>
            <div class="w-5/6 h-5/6 rounded-lg border border-black flex flex-col mx-auto">
                <div class="w-full h-full flex items-end">
                    <div class="w-1/6 text-center mx-auto" ng-repeat="t in Data">
                        <div ng-repeat="i in getNumber(t.StudentsInCourses) track by $index">
                            <p class="w-12 mx-auto bg-cyan-700 h-8"></p>
                        </div>
                        <hr />
                        <p class="mb-2 pb-2">
                        <b>
                            {{t.StudentsInCourses}}
                        </b>
                        </p>
                        <p>
                            {{t.Name}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/AngularJsApp/Dashboard/Module.js"></script>
    <script src="~/AngularJsApp/Dashboard/Service.js"></script>
    <script src="~/AngularJsApp/Dashboard/Controller.js"></script>
}


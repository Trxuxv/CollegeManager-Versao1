<div class="container mt-20 bg-gray-50 shadow-2xl" ng-app="subjects" ng-controller="subjectCtrl" style="width: 80%; height: 75rem; border-radius: 10px; padding: 1.3% 0.2% 0.2% 1%; overflow-y: scroll;">
    <div class="panel bg-white">
        <div class="panel-heading bg-gray-100 text-gray-700 font-medium border-0">Subjects</div>
        <div class="panel-body bg-white">
            <button type="button" class="bg-green-700 rounded-full text-white p-2" data-target="#AdicionarFuncionario" data-toggle="modal">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
            <input id="search" shadow-none ng-model="search" class="bg-gray-300 p-2" style="height: 30px; margin-left: 10em; width: 100%; border: none; padding: 1.5%;" placeholder="Search for a subject..." type="text" />
        </div>

        @*LIST*@
        <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
            <table class="w-full text-xl text-left text-gray-500">
                <thead class="text-xl font-black text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="py-3 px-6">
                            ID
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Name
                        </th>
                        <th scope="col" class="py-3 px-6">
                            Course
                        </th>
                        <th scope="col" class="py-3 px-6 text-center">
                            ACTIONS
                        </th>
                    </tr>
                </thead>
                <tbody class="border-yellow-500">
                    <tr ng-repeat="s in Subjects| filter:search" class="bg-white border-0 hover:bg-gray-50 ">
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            {{s.SubjectId}}
                        </td>
                        <td class="py-4 px-6 border-gray-100">
                            {{s.Name}}
                        </td>
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            {{s.CourseName}}
                        </td>
                        <td class="py-4 px-6 bg-gray-50 border-gray-100">
                            <div class="flex items-center justify-center">
                                <svg data-target="#AtualizarFuncionario" data-toggle="modal" ng-click="updateSubjectById(t)" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 bg-yellow-600 rounded-full text-white p-2  hover:bg-yellow-900">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                                </svg>
                                <svg data-target="#ExcluirFuncionario" id="btnExcluir" data-toggle="modal" ng-click="deleteSubjectById(t)" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 ml-2 bg-red-600 rounded-full text-white p-2  hover:bg-red-900">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                </svg>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


        @*ADD SUBJECT*@
        <div class="modal" id="AdicionarFuncionario" role="dialog" style="width: 100%; padding-top: 8rem;">
            <div class="modal-dialog" style="width: 40%; margin-top: 4%;">
                <div class="modal-content" style="background: #0d1117;">
                    <div class="modal-header" style="border: none;">
                        <h3 style="color: #C9D1D9;">New Subject</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="AdicionarNovoFuncionarioForm">
                            <div class="form-group" style="width: 100%; background: green;">
                                <input class="form-control" readonly="readonly" name="funcionarioId" type="hidden" placeholder="Id Funcionário" style="margin: auto; min-width: 300px;" />
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" name="nome" ng-model="name" placeholder="Name" style="width:100%;" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="nome" ng-model="courseId" placeholder="Course ID" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer" style="border: none;">
                        <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="addSubject()">Confirm</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="clearData()">Close</button>
                    </div>
                </div>
            </div>
        </div>


        @*UPDATE SUBJECT*@
        <div class="modal" id="AtualizarFuncionario" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-info">Update Subject</h3>
                    </div>
                    <div class="modal-body" style="margin-left: 20px">
                        <form class="form-horizontal" name="AtualizarForm">
                            <div class="form-group">
                                <input class="form-control" readonly="readonly" name="UpdatedSubjectId" ng-model="UpdatedSubjectId" type="hidden" placeholder="Funcionario Id" />
                            </div>
                            <div class="form-group">
                                <label class="text-info"> Nome</label>
                                <input class="form-control" name="Nome" ng-model="UpdatedName" type="text" placeholder="Name" />
                            </div>
                            <div class="form-group">
                                <label class="text-info"> Email</label>
                                <input class="form-control" name="CourseId" ng-model="UpdatedCourseId" type="text" placeholder="UpdatedCourseId" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnUpdate" data-dismiss="modal" ng-click="updateSubject()">
                            Update
                        </button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        @*DELETE SUBJECT*@
        <div class="modal" role="dialog" id="ExcluirFuncionario">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-info">Você tem certeza que deseja excluir o Funcionário?</h3>
                    </div>
                    <div class="modal-body">
                        <div>
                            <p>Id do Funcionário : {{UpdatedSubjectId}}</p>
                            <p>Nome do Fucionário : {{UpdatedName}}</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="deleteSubject(UpdatedSubjectId)">Excluir</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="~/AngularJsApp/Subject/Module.js"></script>
    <script src="~/AngularJsApp/Subject/Service.js"></script>
    <script src="~/AngularJsApp/Subject/Controller.js"></script>
}


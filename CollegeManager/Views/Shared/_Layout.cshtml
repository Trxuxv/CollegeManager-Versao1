<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Manager </title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="bg-white h-screen">
    <div class="navbar navbar-fixed-top bg-white border-0 text-gray-700">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("College Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav float-right">
                    <li class="mr-6">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="mr-4">@Html.ActionLink("Teacher", "Index", "Teacher")</li>
                    <li class="mr-4">@Html.ActionLink("Students", "Index", "Student")</li>
                    <li class="mr-4">@Html.ActionLink("Course", "Index", "Course")</li>
                    <li class="mr-4">@Html.ActionLink("Subjects", "Index", "Subject")</li>
                    <li class="mr-4">@Html.ActionLink("Grades", "Index", "Grade")</li>
                    <li class="">@Html.ActionLink("Guide", "Index", "Guide")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content w-full h-5/6">
        @RenderBody()
        @*<footer style="bottom: 0; position: fixed; " class="w-full">
                <p style="color: white;">&copy; @DateTime.Now.Year Débora Ferreira@MagniFinance</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/angular");
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    * {
        font-family: "Goudy Bookletter 1911", sans-serif;
    }
</style>